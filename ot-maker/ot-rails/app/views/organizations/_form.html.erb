<%= form_for(@organization, :html => { multipart: true }) do |f| %>
    <% if @organization.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

            <ul>
                <% @organization.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="col-xs-3">
            <%= image_tag @organization.avatar.url(:avatar), :class => "full-width" %>
            <%= f.file_field :avatar, :class => "hidden" %>
            <br>
            <br>
            <div class="text-center">
                <div class="btn btn-default input-file">Subir imagen</div>
            </div>
        </div>
        <div class="col-xs-9">
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, :class => "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :address %>
                <%= f.text_field :address, :class => "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :phone %>
                <%= f.number_field :phone, :class => "form-control" %>
            </div>
            <div class="actions">
                <%= f.submit :class => "btn btn-success" %>
            </div>        
        </div>
    </div>

<% end %>

<% content_for :script do %>
    <script>
        $('.input-file').click(function () {
            $('input[type="file"]').click()
        })
    </script>
<% end %>
