<h1>Detail participation</h1>
<hr>

<div class="panel panel-default">
	<div class="panel-heading panel-heading-toolbox">
		<div class="panel-toolbar">
			<%= link_to 'Volver', participations_path, :class => "btn btn-link" %>
			<%= link_to edit_participation_path(@participation), data: { tooltip: 'tooltip' }, class: "btn btn-default", title: "Edit" do %>
	          	<span class="glyphicon glyphicon-pencil"></span>
	        <% end %>
			<%= link_to @participation, method: :delete, data: { confirm: 'Are you sure?' }, data: { tooltip: 'tooltip' }, class: "btn btn-default", title: "Delete" do %>
	          	<span class="glyphicon glyphicon-trash"></span>
	        <% end %>
		</div>    
	</div>
	<div class="panel-body">
		
		<table class="table table-bordered">
			<tbody>
							<tr>
					<th>User:</th>
					<td><%= @participation.user.name %></td>
				</tr>
							<tr>
					<th>Organization:</th>
					<td><%= @participation.organization.name %></td>
				</tr>
							<tr>
					<th>Rol:</th>
					<td><%= @participation.role %></td>
				</tr>
						</tbody>
		</table>

	</div>
</div>
