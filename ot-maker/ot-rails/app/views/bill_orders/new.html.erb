<h1>Crear orden de trabajo</h1>
<hr>
<div class="panel panel-default">
  <div class="panel-heading panel-heading-toolbox">
    <div class="panel-toolbar">
      <%= link_to new_bill_order_path, class: "btn btn-primary", data: { tooltip: 'tooltip' }, title: "New Bill order" do %>
        <span class="glyphicon glyphicon-plus"></span>
      <% end %>
    </div>    
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
	        <th><span class="glyphicon glyphicon-ok"></span></th>
	        <th>Código</th>
	        <th>Título</th>
	        <th>Descripción</th>
	        <th>Estado</th>

	        <th>Usuario</th>
	        <th>Grupo</th>

	        <th>Usuario</th>
	        <th>Organización</th>         
        </tr>
      </thead>
      <tbody>
        <% @work_orders_ready.each do |work_order| %>
          <tr>
            <td>
              <div class="checkbox"><label><input type="checkbox"></label></div>
            </td>
            <td><%= link_to work_order.code, work_order_path(work_order) %></td>
            <td><%= work_order.title %></td>
            <td><%= work_order.description %></td>
            <td>
              <%= work_order.show_state %>
            </td>

            <td>
              <% if work_order.user %>
                <%= work_order.user.name %>
              <% end %>
            </td>
            <td>
              <% if work_order.organization %>
                <%= work_order.organization.name %>
              <% end %>
            </td>

            <td>
              <% if work_order.user_assigned %>
                <%= work_order.user_assigned.name %>
              <% end %>
            </td>
            <td>
              <% if work_order.organization_assigned %>
                <%= work_order.organization_assigned.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render 'form' %>
  </div>
  <div class="panel-footer panel-footer-toolbox">
  </div>
</div>
<br>

