<%= form_for(@notification) do |f| %>
<% if @notification.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@notification.errors.count, "error") %> prohibited this notification from being saved:</h2>

    <ul>
        <% @notification.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="form-group">
                <%= f.label :user_id %>
            <%= f.collection_select :user_id, User.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
<div class="form-group">
                <%= f.label :work_order_id %>
            <%= f.collection_select :work_order_id, WorkOrder.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
<div class="form-group">
                <%= f.label :detail %>
            <%= f.text_field :detail, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :status %>
            <%= f.text_field :status, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :notification_type_id %>
            <%= f.collection_select :notification_type_id, NotificationType.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
<div class="actions">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
