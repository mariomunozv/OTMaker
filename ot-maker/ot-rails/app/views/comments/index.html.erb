<h1>Listing comments</h1>
<hr>

<div class="panel panel-default">
  <div class="panel-heading panel-heading-toolbox">
    <div class="panel-toolbar">
      <%= link_to new_comment_path, class: "btn btn-primary", data: { tooltip: 'tooltip' }, title: "New Comment" do %>
        <span class="glyphicon glyphicon-plus"></span>
      <% end %>
    </div>    
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
                      <th>Work order</th>
                      <th>User</th>
                      <th>Content</th>
                  </tr>
      </thead>

      <tbody>
        <% @comments.each do |comment| %>
          <tr>
                            <td><%= comment.work_order.name %></td>
                            <td><%= comment.user.name %></td>
                              <td><%= comment.content %></td>
                      </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer panel-footer-toolbox">
    <div class="panel-toolbar">
      <%= will_paginate @comments, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

<br>
